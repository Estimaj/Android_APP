<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightgray"
    tools:context=".quem_vai_consigo.quem_vai_consigo">

    <!--black bg with a single text-->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="550dp"
        android:layout_marginTop="30dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_big_black_quem_vai_consigo">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


            <!--Top yellow bar with the muv logo-->

            <!--End-->
            <!--Detalhes do condutor-->

            <ImageView
                android:id="@+id/bg_black_O_seu_condutor_quem_vai_consigo"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bg_black_radius_edges" />

            <TextView
                android:id="@+id/textView_O_seu_condutor_quem_vai_consigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:text="O seu Condutor"
                android:textColor="@color/White"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/bg_black_O_seu_condutor_quem_vai_consigo"
                app:layout_constraintTop_toTopOf="@id/bg_black_O_seu_condutor_quem_vai_consigo" />

            <ImageView
                android:id="@+id/Outros_Tripulantes_activity_quem_"
                android:layout_width="match_parent"
                android:layout_height="70dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bg_white_O_seu_condutor_quem_vai_consigo"
                app:srcCompat="@drawable/bg_black_radius_edges" />

            <ImageView
                android:id="@+id/contentor_outros_tripulantes"
                android:layout_width="match_parent"
                android:layout_height="450dp"
                android:layout_marginTop="38dp"
                android:background="#E8E8E8"
                app:layout_constraintTop_toTopOf="@id/Outros_Tripulantes_activity_quem_"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:id="@+id/bg_white_O_seu_condutor_quem_vai_consigo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="38dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/bg_black_O_seu_condutor_quem_vai_consigo"
                app:srcCompat="@drawable/white_square" />

            <TextView
                android:id="@+id/Outros_Tripulantes_activity_quem_vai_consigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginTop="4dp"
                android:text="Passageiros"
                android:textColor="@color/White"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/Outros_Tripulantes_activity_quem_"
                app:layout_constraintTop_toTopOf="@id/Outros_Tripulantes_activity_quem_" />

            <ImageView
                android:id="@+id/imagem_condutor_quem_vai_consigo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@id/bg_white_O_seu_condutor_quem_vai_consigo"
                app:layout_constraintTop_toTopOf="@id/bg_white_O_seu_condutor_quem_vai_consigo"
                app:srcCompat="@drawable/default_user_icon" />

            <TextView
                android:id="@+id/condutor_nome_quem_vai_consigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="12dp"
                android:text="Condutor_Nome"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@id/bg_white_O_seu_condutor_quem_vai_consigo"
                app:layout_constraintTop_toTopOf="@id/bg_white_O_seu_condutor_quem_vai_consigo" />

            <ImageView
                android:id="@+id/contentor1_quem_vai_consigo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/contentor_outros_tripulantes"
                app:srcCompat="@drawable/white_square_shadow" />

            <ImageView
                android:id="@+id/tripulante_image_1_quem_vai_consigo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@id/contentor1_quem_vai_consigo"
                app:layout_constraintTop_toTopOf="@id/contentor1_quem_vai_consigo"
                app:srcCompat="@drawable/default_user_icon" />

            <TextView
                android:id="@+id/tripulante_nome_1_quem_vai_consigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="12dp"
                android:text="Vazio"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@id/contentor1_quem_vai_consigo"
                app:layout_constraintTop_toTopOf="@id/contentor1_quem_vai_consigo" />

            <TextView
                android:id="@+id/tripulante_localidade_1_quem_vai_consigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:text="Vazio"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/contentor1_quem_vai_consigo"
                app:layout_constraintTop_toBottomOf="@id/tripulante_nome_1_quem_vai_consigo" />

            <ImageView
                android:id="@+id/contentor2_quem_vai_consigo2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/contentor1_quem_vai_consigo"
                app:srcCompat="@drawable/white_square_shadow" />

            <TextView
                android:id="@+id/tripulante_localidade_2_quem_vai_consigo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:text="Vazio"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/contentor2_quem_vai_consigo2"
                app:layout_constraintTop_toBottomOf="@id/tripulante_nome_2_quem_vai_consigo2" />

            <ImageView
                android:id="@+id/tripulante_image_2_quem_vai_consigo2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@id/contentor2_quem_vai_consigo2"
                app:layout_constraintTop_toTopOf="@id/contentor2_quem_vai_consigo2"
                app:srcCompat="@drawable/default_user_icon" />

            <TextView
                android:id="@+id/tripulante_nome_2_quem_vai_consigo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="12dp"
                android:text="Vazio"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@id/contentor2_quem_vai_consigo2"
                app:layout_constraintTop_toTopOf="@id/contentor2_quem_vai_consigo2" />

            <ImageView
                android:id="@+id/contentor3_quem_vai_consigo"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@id/contentor2_quem_vai_consigo2"
                app:srcCompat="@drawable/white_square_shadow"
                tools:layout_editor_absoluteX="0dp" />

            <ImageView
                android:id="@+id/tripulante_image_3_quem_vai_consigo"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@id/contentor3_quem_vai_consigo"
                app:layout_constraintTop_toTopOf="@id/contentor3_quem_vai_consigo"
                app:srcCompat="@drawable/default_user_icon" />

            <TextView
                android:id="@+id/tripulante_localidade_3_quem_vai_consigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:text="Vazio"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/contentor3_quem_vai_consigo"
                app:layout_constraintTop_toBottomOf="@id/tripulante_nome_3_quem_vai_consigo" />

            <TextView
                android:id="@+id/tripulante_nome_3_quem_vai_consigo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="12dp"
                android:text="Vazio"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@id/contentor3_quem_vai_consigo"
                app:layout_constraintTop_toTopOf="@id/contentor3_quem_vai_consigo" />

            <ImageView
                android:id="@+id/contentor4_quem_vai_consigo2"
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_marginTop="6dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/contentor3_quem_vai_consigo"
                app:srcCompat="@drawable/white_square_shadow" />

            <TextView
                android:id="@+id/tripulante_nome_4_quem_vai_consigo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:layout_marginTop="12dp"
                android:text="Vazio"
                android:textSize="24sp"
                app:layout_constraintStart_toStartOf="@id/contentor4_quem_vai_consigo2"
                app:layout_constraintTop_toTopOf="@id/contentor4_quem_vai_consigo2" />

            <TextView
                android:id="@+id/tripulante_localidade_4_quem_vai_consigo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="120dp"
                android:text="Vazio"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@id/contentor4_quem_vai_consigo2"
                app:layout_constraintTop_toBottomOf="@id/tripulante_nome_4_quem_vai_consigo2" />

            <ImageView
                android:id="@+id/tripulante_image_4_quem_vai_consigo2"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="4dp"
                app:layout_constraintStart_toStartOf="@id/contentor4_quem_vai_consigo2"
                app:layout_constraintTop_toTopOf="@id/contentor4_quem_vai_consigo2"
                app:srcCompat="@drawable/default_user_icon" />

            <ImageView
                android:id="@+id/anchor_quem_vai_consigo"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="21dp"
                android:layout_marginTop="800dp"
                android:layout_marginEnd="391dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/spinner_background_white" />

            <!--Outros Tripulantes-->


        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <ImageView
        android:id="@+id/bg_big_black_quem_vai_consigo"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_black_radius_edges" />

    <TextView
        android:id="@+id/textView_quem_vai_consigo_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:layout_marginTop="50dp"
        android:text="Quem vai consigo"
        android:textColor="@color/White"
        android:textSize="23sp"
        app:layout_constraintBottom_toBottomOf="@id/bg_big_black_quem_vai_consigo"
        app:layout_constraintStart_toStartOf="@id/bg_big_black_quem_vai_consigo"
        app:layout_constraintTop_toTopOf="@id/bg_big_black_quem_vai_consigo" />

    <include

        layout="@layout/barra_lateral_pro" />

</androidx.constraintlayout.widget.ConstraintLayout>