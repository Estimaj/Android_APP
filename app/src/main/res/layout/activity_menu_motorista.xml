<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#373433">


    <ImageView
        android:id="@+id/activity_menu_motorista_btn_Servicos"
        android:layout_width="330dp"
        android:layout_height="80dp"
        android:layout_marginTop="30dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_menu_motorista_O_que_pretende"
        app:srcCompat="@drawable/marcar_viagem" />

    <TextView
        android:id="@+id/activity_menu_motorista_O_que_pretende"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="43dp"
        android:layout_marginTop="80dp"
        android:layout_marginEnd="197dp"
        android:text="@string/o_que_pretende_fazer"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/activity_menu_motorista_user_localidade" />

    <ImageView
        android:id="@+id/activity_menu_motorista_btn_Viagens_Efetuadas"
        android:layout_width="330dp"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/activity_menu_motorista_btn_Servicos"
        app:srcCompat="@drawable/clock" />

    <TextView
        android:id="@+id/activity_menu_motorista_txt_Servicos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="24dp"
        android:text="ServiÃ§os a Decorrer"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/activity_menu_motorista_btn_Servicos"
        app:layout_constraintTop_toTopOf="@+id/activity_menu_motorista_btn_Servicos" />

    <TextView
        android:id="@+id/activity_menu_motorista_txt_Viagens_Efetuadas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="70dp"
        android:layout_marginTop="24dp"
        android:text="@string/ver_viagens_efetuadas"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        app:layout_constraintStart_toStartOf="@+id/activity_menu_motorista_btn_Viagens_Efetuadas"
        app:layout_constraintTop_toTopOf="@+id/activity_menu_motorista_btn_Viagens_Efetuadas" />

    <ImageView
        android:id="@+id/activity_menu_motorista_user_outer"
        android:layout_width="253dp"
        android:layout_height="189dp"
        android:layout_marginTop="85dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/caixa_blck" />

    <ImageView
        android:id="@+id/activity_menu_motorista_user_Inner"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="107dp"
        app:layout_constraintEnd_toStartOf="@id/activity_menu_motorista_user_outer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@id/activity_menu_motorista_user_outer"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_launcher_foreground" />

    <TextView
        android:id="@+id/activity_menu_motorista_user_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/user_nome"
        android:textColor="#FCD100"
        android:textSize="18sp"
        app:layout_constraintEnd_toStartOf="@id/activity_menu_motorista_user_outer"
        app:layout_constraintStart_toEndOf="@id/activity_menu_motorista_user_outer"
        app:layout_constraintTop_toBottomOf="@id/activity_menu_motorista_user_Inner" />

    <TextView
        android:id="@+id/activity_menu_motorista_user_localidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:text="@string/user_localidade"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toStartOf="@+id/activity_menu_motorista_user_outer"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/activity_menu_motorista_user_outer"
        app:layout_constraintTop_toBottomOf="@+id/activity_menu_motorista_user_Name" />

    <include layout="@layout/barra_lateral_pro" />


</androidx.constraintlayout.widget.ConstraintLayout>