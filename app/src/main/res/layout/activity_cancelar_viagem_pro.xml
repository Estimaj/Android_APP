<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightgray">


    <ScrollView
        android:id="@+id/scrollView2_cancelar_viagem_new"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-8dp"
        tools:layout_editor_absoluteY="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/anchor_activity_cancelar_viagem"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginTop="100dp"
                android:text="3 €"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/bg_white_cancelar_viagem_new" />

            <ImageView
                android:id="@+id/bg_white_cancelar_viagem_new"
                android:layout_width="match_parent"
                android:layout_height="400dp"
                android:layout_marginTop="10dp"
                android:background="@color/white_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/bg_white_with_cancelar_viagem_new" />

            <TextView
                android:id="@+id/textView_detalhes_cancelar_viagem_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="Detalhes da viagem afetada:"
                android:textColor="@color/Black"
                android:textSize="14sp"
                android:textStyle="bold"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/bg_white_cancelar_viagem_new" />

            <!--Origem-->
            <ImageView
                android:id="@+id/origem_cancelar_viagem_new"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@color/White"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textView_detalhes_cancelar_viagem_new" />

            <ImageView
                android:id="@+id/icon_marker_origem_cancelar_viagem_new"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="20dp"
                app:layout_constraintBottom_toBottomOf="@id/origem_cancelar_viagem_new"
                app:layout_constraintStart_toStartOf="@id/origem_cancelar_viagem_new"
                app:layout_constraintTop_toTopOf="@id/origem_cancelar_viagem_new"
                app:srcCompat="@drawable/marker_icon" />

            <TextView
                android:id="@+id/textView_origem_cancelar_viagem_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Origem"
                android:textColor="@color/Black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/icon_marker_origem_cancelar_viagem_new"
                app:layout_constraintTop_toTopOf="@id/origem_cancelar_viagem_new" />

            <TextView
                android:id="@+id/local_user_textView_origem_cancelar_viagem_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Póvoa de Calde"
                app:layout_constraintStart_toStartOf="@id/textView_origem_cancelar_viagem_new"
                app:layout_constraintTop_toBottomOf="@id/textView_origem_cancelar_viagem_new" />
            <!--Destino-->
            <ImageView
                android:id="@+id/destino_cancelar_viagem_new"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@color/White"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/origem_cancelar_viagem_new" />

            <ImageView
                android:id="@+id/icon_marker_destino_cancelar_viagem_new"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="20dp"
                app:layout_constraintBottom_toBottomOf="@id/destino_cancelar_viagem_new"
                app:layout_constraintStart_toStartOf="@id/destino_cancelar_viagem_new"
                app:layout_constraintTop_toTopOf="@id/destino_cancelar_viagem_new"
                app:srcCompat="@drawable/marker_icon_solid" />

            <TextView
                android:id="@+id/textView_destino_cancelar_viagem_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Destino"
                android:textColor="@color/Black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/icon_marker_destino_cancelar_viagem_new"
                app:layout_constraintTop_toTopOf="@id/destino_cancelar_viagem_new" />

            <TextView
                android:id="@+id/local_user_textView_cancelar_viagem_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Centro de Camionagem"
                app:layout_constraintStart_toStartOf="@id/textView_destino_cancelar_viagem_new"
                app:layout_constraintTop_toBottomOf="@id/textView_destino_cancelar_viagem_new" />
            <!--Hora-->
            <ImageView
                android:id="@+id/hora_cancelar_viagem_new"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@color/White"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/destino_cancelar_viagem_new" />

            <ImageView
                android:id="@+id/clock_icon_hora_cancelar_viagem_new"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="20dp"
                app:layout_constraintBottom_toBottomOf="@id/hora_cancelar_viagem_new"
                app:layout_constraintStart_toStartOf="@id/hora_cancelar_viagem_new"
                app:layout_constraintTop_toTopOf="@id/hora_cancelar_viagem_new"
                app:srcCompat="@drawable/clock_marcar_viagem" />

            <TextView
                android:id="@+id/textView_hora_cancelar_viagem_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Hora"
                android:textColor="@color/Black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/clock_icon_hora_cancelar_viagem_new"
                app:layout_constraintTop_toTopOf="@id/hora_cancelar_viagem_new" />

            <TextView
                android:id="@+id/local_user_textView_hora_cancelar_viagem_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16:00h"
                app:layout_constraintStart_toStartOf="@id/textView_hora_cancelar_viagem_new"
                app:layout_constraintTop_toBottomOf="@id/textView_hora_cancelar_viagem_new" />

            <!--Dia-->
            <ImageView
                android:id="@+id/dia_cancelar_viagem_new"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@color/White"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/hora_cancelar_viagem_new" />

            <ImageView
                android:id="@+id/agenda_icon_dia_cancelar_viagem_new"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="20dp"
                app:layout_constraintBottom_toBottomOf="@id/dia_cancelar_viagem_new"
                app:layout_constraintStart_toStartOf="@id/dia_cancelar_viagem_new"
                app:layout_constraintTop_toTopOf="@id/dia_cancelar_viagem_new"
                app:srcCompat="@drawable/agenda_marcar_viagem" />

            <TextView
                android:id="@+id/textView_dia_cancelar_viagem_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Dia"
                android:textColor="@color/Black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/agenda_icon_dia_cancelar_viagem_new"
                app:layout_constraintTop_toTopOf="@id/dia_cancelar_viagem_new" />

            <TextView
                android:id="@+id/local_user_textView_dia_cancelar_viagem_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="16/02/2020"
                app:layout_constraintStart_toStartOf="@id/textView_dia_cancelar_viagem_new"
                app:layout_constraintTop_toBottomOf="@id/textView_dia_cancelar_viagem_new" />

            <!--Taxa Desconto-->
            <ImageView
                android:id="@+id/taxa_desconto_cancelar_viagem_new"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@color/White"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/dia_cancelar_viagem_new" />

            <ImageView
                android:id="@+id/euro_simbolo_icon_taxa_desconto_cancelar_viagem_new"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="20dp"
                app:layout_constraintBottom_toBottomOf="@id/taxa_desconto_cancelar_viagem_new"
                app:layout_constraintStart_toStartOf="@id/taxa_desconto_cancelar_viagem_new"
                app:layout_constraintTop_toTopOf="@id/taxa_desconto_cancelar_viagem_new"
                app:srcCompat="@drawable/euro_simbolo_icon" />

            <TextView
                android:id="@+id/textView_taxa_desconto_cancelar_viagem_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Taxa de Desconto"
                android:textColor="@color/Black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/euro_simbolo_icon_taxa_desconto_cancelar_viagem_new"
                app:layout_constraintTop_toTopOf="@id/taxa_desconto_cancelar_viagem_new" />

            <TextView
                android:id="@+id/local_user_textView_taxa_desconto_cancelar_viagem_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3 €"
                app:layout_constraintStart_toStartOf="@id/textView_taxa_desconto_cancelar_viagem_new"
                app:layout_constraintTop_toBottomOf="@id/textView_taxa_desconto_cancelar_viagem_new" />
            <!--Notificação da atividade anterior-->
            <ImageView
                android:id="@+id/bg_white_with_cancelar_viagem_new"
                android:layout_width="match_parent"
                android:layout_height="270dp"
                android:background="@color/white_gray"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/total_cancelar_viagem_new"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp"
                android:background="@color/White"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/taxa_desconto_cancelar_viagem_new" />

            <ImageView
                android:id="@+id/total_icon_cancelar_viagem_new"
                android:layout_width="35dp"
                android:layout_height="35dp"
                android:layout_margin="20dp"
                app:layout_constraintBottom_toBottomOf="@id/total_cancelar_viagem_new"
                app:layout_constraintStart_toStartOf="@id/total_cancelar_viagem_new"
                app:layout_constraintTop_toTopOf="@id/total_cancelar_viagem_new"
                app:srcCompat="@drawable/euro_money_icon" />

            <TextView
                android:id="@+id/textView_total_cancelar_viagem_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="5dp"
                android:text="Total a pagar"
                android:textColor="@color/Black"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@id/total_icon_cancelar_viagem_new"
                app:layout_constraintTop_toTopOf="@id/total_cancelar_viagem_new" />

            <TextView
                android:id="@+id/total_textview_cancelar_viagem_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Vazio €"
                app:layout_constraintStart_toStartOf="@id/textView_total_cancelar_viagem_new"
                app:layout_constraintTop_toBottomOf="@id/textView_total_cancelar_viagem_new" />

            <!--Black notificacao bg-->
            <ImageView
                android:id="@+id/bg_black_cancelar_viagem_new"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="5dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/bg_black_radius_edges" />

            <TextView
                android:id="@+id/textView_on_black_bg_cancelar_viagem_new"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="40dp"
                android:layout_marginTop="45dp"
                android:text="Cancelar Viagem"
                android:textColor="@color/White"
                android:textSize="20sp"
                app:layout_constraintBottom_toBottomOf="@id/bg_black_cancelar_viagem_new"
                app:layout_constraintStart_toStartOf="@+id/bg_black_cancelar_viagem_new"
                app:layout_constraintTop_toTopOf="@id/bg_black_cancelar_viagem_new" />

            <ImageView
                android:id="@+id/canideo_cancelar_viagem_new"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="180dp"
                android:layout_marginEnd="50dp"
                app:layout_constraintEnd_toStartOf="@+id/mala_cancelar_viagem_new"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/bg_white_with_cancelar_viagem_new"
                app:layout_constraintTop_toTopOf="@+id/bg_white_with_cancelar_viagem_new"
                app:srcCompat="@drawable/dog_icon_marcar" />

            <ImageView
                android:id="@+id/mala_cancelar_viagem_new"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="180dp"
                android:layout_marginEnd="50dp"
                app:layout_constraintEnd_toStartOf="@+id/wheel_cancelar_viagem_new"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/canideo_cancelar_viagem_new"
                app:layout_constraintTop_toTopOf="@+id/bg_white_with_cancelar_viagem_new"
                app:srcCompat="@drawable/mala_icon_marcar" />

            <ImageView
                android:id="@+id/wheel_cancelar_viagem_new"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginTop="180dp"
                app:layout_constraintEnd_toStartOf="@+id/bg_white_with_cancelar_viagem_new"
                app:layout_constraintHorizontal_bias="0.5"
                app:layout_constraintStart_toEndOf="@+id/mala_cancelar_viagem_new"
                app:layout_constraintTop_toTopOf="@+id/bg_white_with_cancelar_viagem_new"
                app:srcCompat="@drawable/wheel_icon_marcar" />

            <ImageView
                android:id="@+id/canideo_check_cancelar_viagem_new"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="45dp"
                app:layout_constraintBottom_toBottomOf="@+id/canideo_cancelar_viagem_new"
                app:layout_constraintEnd_toEndOf="@+id/canideo_cancelar_viagem_new"
                app:srcCompat="@drawable/check_icon_yes" />

            <ImageView
                android:id="@+id/mala_check_cancelar_viagem_new"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="45dp"
                app:layout_constraintBottom_toBottomOf="@+id/mala_cancelar_viagem_new"
                app:layout_constraintEnd_toEndOf="@+id/mala_cancelar_viagem_new"
                app:srcCompat="@drawable/check_icon_yes" />

            <ImageView
                android:id="@+id/wheel_check_cancelar_viagem_new"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginEnd="45dp"
                android:layout_marginBottom="45dp"
                app:layout_constraintBottom_toBottomOf="@+id/wheel_cancelar_viagem_new"
                app:layout_constraintEnd_toEndOf="@+id/wheel_cancelar_viagem_new"
                app:srcCompat="@drawable/check_icon_yes" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <Button
        android:id="@+id/btn_cancelar_viagem_pro"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/btn_marcar_viagem"
        android:text="Cancelar Viagem"
        android:textColor="@color/White"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent" />

    <include layout="@layout/barra_lateral_pro" />

</androidx.constraintlayout.widget.ConstraintLayout>