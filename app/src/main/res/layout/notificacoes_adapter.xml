<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLightgray">

    <ImageView
        android:id="@+id/bg_white_notificacoes_adapter"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="5dp"
        app:srcCompat="@drawable/white_square" />

    <ImageView
        android:id="@+id/imageView_foto_perfil_utilizador_notificacoes_adapter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="@id/bg_white_notificacoes_adapter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bg_white_notificacoes_adapter"
        app:srcCompat="@drawable/default_user_icon" />

    <TextView
        android:id="@+id/nome_utilizador_notificacoes_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome_utilizador "
        android:textColor="@color/Black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imageView_foto_perfil_utilizador_notificacoes_adapter"
        app:layout_constraintTop_toTopOf="@id/bg_white_notificacoes_adapter"
        app:layout_constraintBottom_toBottomOf="@id/bg_white_notificacoes_adapter"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/mensagem_notificacao_adapter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="mensagem"
        android:textColor="@color/Black"
        app:layout_constraintStart_toStartOf="@id/nome_utilizador_notificacoes_adapter"
        app:layout_constraintTop_toBottomOf="@id/nome_utilizador_notificacoes_adapter"
        />

    <TextView
        android:id="@+id/data_notificacoes_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00/00/0000"
        android:textColor="@color/Black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/nome_utilizador_notificacoes_adapter"
        app:layout_constraintTop_toBottomOf="@id/mensagem_notificacao_adapter" />

    <Button
        android:id="@+id/button_mais_informacao_notificacao_adapter"
        android:layout_width="114dp"
        android:layout_height="32dp"
        android:layout_margin="10dp"
        android:background="@color/Yellow"
        android:drawableLeft="@drawable/plus_circle_solid_black"
        android:drawablePadding="5dp"
        android:onClick="MaisInfo"
        android:text="Mais info"
        app:layout_constraintBottom_toBottomOf="@id/bg_white_notificacoes_adapter"
        app:layout_constraintEnd_toEndOf="@id/bg_white_notificacoes_adapter" />
</androidx.constraintlayout.widget.ConstraintLayout>