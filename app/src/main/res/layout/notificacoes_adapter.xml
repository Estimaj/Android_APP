<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorLightgray">

    <ImageView
        android:id="@+id/bg_white_notificacoes_adapter"
        android:layout_width="400dp"
        android:layout_height="150dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/white_square" />

    <ImageView
        android:id="@+id/imageView_foto_perfil_utilizador_notificacoes_adapter"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="@id/bg_white_notificacoes_adapter"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@id/bg_white_notificacoes_adapter"
        app:srcCompat="@drawable/default_user_icon" />

    <TextView
        android:id="@+id/nome_utilizador_notificacoes_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome_utilizador "
        android:textColor="@color/Black"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/imageView_foto_perfil_utilizador_notificacoes_adapter"
        app:layout_constraintTop_toTopOf="@id/bg_white_notificacoes_adapter"
        app:layout_constraintBottom_toBottomOf="@id/bg_white_notificacoes_adapter"
        android:layout_marginBottom="80dp"
        android:layout_marginLeft="5dp"
        />

    <TextView
        android:id="@+id/mensagem_notificacao_adapter"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:text="mensagem"
        android:textColor="@color/Black"
        app:layout_constraintStart_toStartOf="@id/nome_utilizador_notificacoes_adapter"
        app:layout_constraintTop_toBottomOf="@id/nome_utilizador_notificacoes_adapter"
        />

    <TextView
        android:id="@+id/data_notificacoes_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00/00/0000"
        android:textColor="@color/Black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/nome_utilizador_notificacoes_adapter"
        app:layout_constraintTop_toBottomOf="@id/mensagem_notificacao_adapter" />

    <ImageView
        android:id="@+id/btn_mais_info_not_adapter"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="6dp"
        app:layout_constraintBottom_toBottomOf="@+id/bg_white_notificacoes_adapter"
        app:layout_constraintEnd_toEndOf="@+id/bg_white_notificacoes_adapter"
        app:srcCompat="@drawable/btn_mais_info" />

    <TextView
        android:id="@+id/btn_mais_info_txt_not_adapter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="10dp"
        android:text="Mais Info"
        android:textColor="@color/Black"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@+id/btn_mais_info_not_adapter"
        app:layout_constraintTop_toTopOf="@+id/btn_mais_info_not_adapter" />
</androidx.constraintlayout.widget.ConstraintLayout>