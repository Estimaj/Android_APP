<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <ImageView
        android:id="@+id/viagens_efetuadas_adapter_contentor_condutor"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/caixa_viagens_efetuadas_new" />

    <TextView
        android:id="@+id/viagens_efetuadas_adapter_data_trip_condutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="26dp"
        android:layout_marginTop="22dp"
        android:text="data_trip"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="@id/viagens_efetuadas_adapter_contentor_condutor"
        app:layout_constraintTop_toTopOf="@id/viagens_efetuadas_adapter_contentor_condutor" />

    <TextView
        android:id="@+id/viagens_efetuadas_adapter_hora_trip_condutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="22dp"
        android:layout_marginEnd="20dp"
        android:text="hora_trip"
        android:textColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="@+id/viagens_efetuadas_adapter_contentor_condutor"
        app:layout_constraintTop_toTopOf="@id/viagens_efetuadas_adapter_contentor_condutor" />

    <ImageView
        android:id="@+id/viagens_efetuadas_adapter_barra_distância_condutor"
        android:layout_width="181dp"
        android:layout_height="19dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="75dp"
        app:layout_constraintStart_toEndOf="@id/viagens_efetuadas_adapter_Local_Partida_condutor"
        app:layout_constraintTop_toTopOf="@id/viagens_efetuadas_adapter_contentor_condutor"
        app:srcCompat="@drawable/distancia_viagens_efetuadas" />

    <TextView
        android:id="@+id/viagens_efetuadas_adapter_Local_Partida_condutor"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:layout_marginTop="60dp"
        android:text="Local_Partida"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="@id/viagens_efetuadas_adapter_contentor_condutor"
        app:layout_constraintTop_toTopOf="@id/viagens_efetuadas_adapter_contentor_condutor" />

    <TextView
        android:id="@+id/viagens_efetuadas_adapter_Local_Chegada_condutor"
        android:layout_width="90dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="60dp"
        android:text="Local_Chegada"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@id/viagens_efetuadas_adapter_barra_distância_condutor"
        app:layout_constraintTop_toTopOf="@id/viagens_efetuadas_adapter_contentor_condutor" />

    <ImageView
        android:id="@+id/viagens_efetuadas_adapter_mais_info_condutor"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="135dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintEnd_toEndOf="@+id/viagens_efetuadas_adapter_contentor_condutor"
        app:layout_constraintTop_toTopOf="@+id/viagens_efetuadas_adapter_contentor_condutor"
        app:srcCompat="@drawable/btn_mais_info" />

    <TextView
        android:id="@+id/viagens_efetuadas_adapter_mais_info_text_condutor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="44dp"
        android:layout_marginTop="10dp"
        android:text="Mais Info"
        android:textSize="14sp"
        app:layout_constraintStart_toStartOf="@id/viagens_efetuadas_adapter_mais_info_condutor"
        app:layout_constraintTop_toTopOf="@id/viagens_efetuadas_adapter_mais_info_condutor" />

</androidx.constraintlayout.widget.ConstraintLayout>