<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightgray"
    tools:context=".viagens_marcadas.viagens_marcadas">

    <ListView
        android:id="@+id/viagens_marcadas_listview"
        android:layout_width="match_parent"
        android:layout_height="520dp"
        android:layout_marginTop="1dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/bg_big_black_viagens_marcadas" />

    <!--black bg with a single text-->
    <ImageView
        android:id="@+id/bg_big_black_viagens_marcadas"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/bg_black_radius_edges" />

    <TextView
        android:id="@+id/textView_viagens_marcadas_content"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:layout_marginTop="90dp"
        android:text="Viagens Marcadas"
        android:textColor="@color/White"
        android:textSize="23sp"
        app:layout_constraintStart_toStartOf="@+id/bg_big_black_viagens_marcadas"
        app:layout_constraintTop_toTopOf="@+id/bg_big_black_viagens_marcadas" />

    <include layout="@layout/barra_lateral_pro" />


    <!--Top yellow bar with the muv logo-->

    <!--End-->


</androidx.constraintlayout.widget.ConstraintLayout>