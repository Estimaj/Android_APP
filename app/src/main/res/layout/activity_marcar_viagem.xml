<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorLightgray">


    <!-- <include layout="@layout/barra_lateral_pro" /> -->

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:layout_editor_absoluteX="-8dp"
        tools:layout_editor_absoluteY="3dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/caixa_branca_agenda_marcar_viagem"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:layout_marginTop="267dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/Background_cinzento_marcar_viagem"
                app:srcCompat="@drawable/white_square" />

            <ImageView
                android:id="@+id/Background_cinzento_marcar_viagem"
                android:layout_width="match_parent"
                android:layout_height="336dp"
                android:src="@drawable/bg_black_radius_edges"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Spinner
                android:id="@+id/spinner_destino_marcar_viagem"
                android:layout_width="312dp"
                android:layout_height="52dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="231dp"
                android:layout_marginEnd="27dp"
                android:background="@drawable/spinner_background_white"
                android:entries="@array/Spinner_items"
                android:popupBackground="@drawable/spinner_background_white"
                app:layout_constraintEnd_toEndOf="@+id/Background_cinzento_marcar_viagem"
                app:layout_constraintStart_toStartOf="@+id/Background_cinzento_marcar_viagem"
                app:layout_constraintTop_toTopOf="@+id/Background_cinzento_marcar_viagem" />

            <TextView
                android:id="@+id/Partida_txt_marcar_viagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="84dp"
                android:text="Partida"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/Background_cinzento_marcar_viagem"
                app:layout_constraintTop_toTopOf="@+id/Background_cinzento_marcar_viagem" />

            <Spinner
                android:id="@+id/spinner_partida_marcar_viagem"
                android:layout_width="312dp"
                android:layout_height="52dp"
                android:layout_marginStart="27dp"
                android:layout_marginTop="124dp"
                android:layout_marginEnd="27dp"
                android:background="@drawable/spinner_background_white"
                android:entries="@array/Spinner_items"
                android:popupBackground="@drawable/spinner_background_white"
                app:layout_constraintEnd_toEndOf="@+id/Background_cinzento_marcar_viagem"
                app:layout_constraintStart_toStartOf="@+id/Background_cinzento_marcar_viagem"
                app:layout_constraintTop_toTopOf="@+id/Background_cinzento_marcar_viagem" />

            <TextView
                android:id="@+id/Destino_txt_marcar_viagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="50dp"
                android:layout_marginTop="192dp"
                android:text="Destino"
                android:textColor="@color/White"
                android:textSize="20sp"
                app:layout_constraintStart_toStartOf="@+id/Background_cinzento_marcar_viagem"
                app:layout_constraintTop_toTopOf="@+id/Background_cinzento_marcar_viagem" />

            <ImageView
                android:id="@+id/seta_spinner_partida_marcar_viagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="11dp"
                app:layout_constraintEnd_toEndOf="@+id/spinner_partida_marcar_viagem"
                app:layout_constraintTop_toTopOf="@+id/spinner_partida_marcar_viagem"
                app:srcCompat="@drawable/seta_spinner_background" />

            <ImageView
                android:id="@+id/seta_spinner_destino_marcar_viagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="18dp"
                android:layout_marginEnd="11dp"
                app:layout_constraintEnd_toEndOf="@+id/spinner_destino_marcar_viagem"
                app:layout_constraintTop_toTopOf="@+id/spinner_destino_marcar_viagem"
                app:srcCompat="@drawable/seta_spinner_background" />

            <ImageView
                android:id="@+id/agenda_icon_marcar_viagem"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="90dp"
                app:layout_constraintStart_toStartOf="@+id/caixa_branca_agenda_marcar_viagem"
                app:layout_constraintTop_toTopOf="@+id/caixa_branca_agenda_marcar_viagem"
                app:srcCompat="@drawable/agenda_marcar_viagem" />

            <ImageView
                android:id="@+id/caixa_branca_animais_marcar_viagem"
                android:layout_width="match_parent"
                android:layout_height="195dp"
                android:layout_marginTop="12dp"
                app:layout_constraintTop_toBottomOf="@+id/caixa_branca_agenda_marcar_viagem"
                app:srcCompat="@drawable/white_square"
                tools:layout_editor_absoluteX="16dp" />

            <ImageView
                android:id="@+id/clock_icon_marcar_viagem"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="48dp"
                android:layout_marginTop="148dp"
                app:layout_constraintStart_toStartOf="@+id/caixa_branca_agenda_marcar_viagem"
                app:layout_constraintTop_toTopOf="@+id/caixa_branca_agenda_marcar_viagem"
                app:srcCompat="@drawable/clock_marcar_viagem" />


            <TextView
                android:id="@+id/agenda_date_picker_text_marcar_viagem"
                android:layout_width="260dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="91dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/caixa_hora_agenda"
                android:gravity="center"
                android:text="data"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="@+id/caixa_branca_agenda_marcar_viagem"
                app:layout_constraintStart_toEndOf="@+id/agenda_icon_marcar_viagem"
                app:layout_constraintTop_toTopOf="@+id/caixa_branca_agenda_marcar_viagem" />

            <TextView
                android:id="@+id/agenda_time_picker_text_marcar_viagem"
                android:layout_width="260dp"
                android:layout_height="45dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="148dp"
                android:layout_marginEnd="50dp"
                android:background="@drawable/caixa_hora_agenda"
                android:gravity="center"
                android:text="hora"
                android:textSize="25sp"
                app:layout_constraintEnd_toEndOf="@+id/caixa_branca_agenda_marcar_viagem"
                app:layout_constraintStart_toEndOf="@+id/clock_icon_marcar_viagem"
                app:layout_constraintTop_toTopOf="@+id/caixa_branca_agenda_marcar_viagem" />

            <ImageView
                android:id="@+id/imageView5"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="18dp"
                app:layout_constraintStart_toStartOf="@+id/caixa_branca_animais_marcar_viagem"
                app:layout_constraintTop_toTopOf="@+id/caixa_branca_animais_marcar_viagem"
                app:srcCompat="@drawable/dog_icon_marcar" />

            <ImageView
                android:id="@+id/imageView6"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@+id/caixa_branca_animais_marcar_viagem"
                app:layout_constraintTop_toBottomOf="@+id/imageView5"
                app:srcCompat="@drawable/wheel_icon_marcar" />

            <ImageView
                android:id="@+id/imageView7"
                android:layout_width="45dp"
                android:layout_height="45dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="12dp"
                app:layout_constraintStart_toStartOf="@+id/caixa_branca_animais_marcar_viagem"
                app:layout_constraintTop_toBottomOf="@+id/imageView6"
                app:srcCompat="@drawable/mala_icon_marcar" />

            <TextView
                android:id="@+id/dog_text_marcar_viagem"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="26dp"
                android:text="Viaja com animais?"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/imageView5"
                app:layout_constraintTop_toTopOf="@+id/caixa_branca_animais_marcar_viagem" />

            <Switch
                android:id="@+id/switch1"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="107dp"
                android:layout_marginTop="16dp"
                app:layout_constraintStart_toEndOf="@+id/dog_text_marcar_viagem"
                app:layout_constraintTop_toTopOf="@+id/caixa_branca_animais_marcar_viagem" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="33dp"
                android:text="Tem necessidades especiais?"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/imageView6"
                app:layout_constraintTop_toBottomOf="@+id/dog_text_marcar_viagem" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="33dp"
                android:text="Viaja com bagagem?"
                android:textSize="18sp"
                app:layout_constraintStart_toEndOf="@+id/imageView7"
                app:layout_constraintTop_toBottomOf="@+id/textView2" />

            <Switch
                android:id="@+id/switch2"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="23dp"
                android:layout_marginTop="75dp"
                app:layout_constraintStart_toEndOf="@+id/textView2"
                app:layout_constraintTop_toTopOf="@+id/caixa_branca_animais_marcar_viagem" />

            <Switch
                android:id="@+id/switch3"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="94dp"
                android:layout_marginTop="132dp"
                app:layout_constraintStart_toEndOf="@+id/textView3"
                app:layout_constraintTop_toTopOf="@+id/caixa_branca_animais_marcar_viagem" />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>







